@model ExpenseTracker.Domain.Models.Entities.UserAccount

@{
    ViewData["Title"] = "Details";
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <!--PAGE TITLE-->
    <div class="col-lg-6 offset-3">
        <div class="card shadow-sm mb-1">
            <div class="card-body">
                <div class="display-6">User Details</div>
                <hr />

                <!--ALERT-->
                @if (TempData[ExpenseTracker.Utilities.Constants.MessageConstants.MessageKey] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill"></i>&nbsp;@TempData[ExpenseTracker.Utilities.Constants.MessageConstants.MessageKey]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div>
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dt class="col-sm-1">:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3">Date of Birth</dt>
                        <dt class="col-sm-1">:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DOB)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Gender)</dt>
                        <dt class="col-sm-1">:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dt class="col-sm-1">:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>

                    <div class="mt-2 text-center">
                        <a asp-controller="UserAccounts" asp-action="Index" class="btn btn-dark">Finish</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>