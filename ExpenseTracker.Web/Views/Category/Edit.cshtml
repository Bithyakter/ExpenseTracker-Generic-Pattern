@model ExpenseTracker.Domain.Models.Entities.ExpenseCategory

@{
   ViewData["Title"] = "Edit";
}

<h1>Expense Category</h1>
<hr />

<div class="row">
   <div class="col-md-4">
      <form asp-action="Edit">
         @Html.AntiForgeryToken()

         <div asp-validation-summary="ModelOnly" class="text-danger"></div>

         <!--NAME-->
         <div class="form-group">
            <label asp-for="CategoryName" class="control-label">Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
         </div>               

         <div class="form-group mt-2">
            <input type="hidden" asp-for="ExpenseCategoryID" />

            <input type="submit" value="Save" class="btn btn-dark" />
            &nbsp;
            <a asp-action="Index" class="btn btn-outline-dark">Close</a>
         </div>
      </form>
   </div>
</div>